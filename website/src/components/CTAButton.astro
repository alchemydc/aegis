---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'lg';
}

const { href, variant = 'primary', size = 'sm' } = Astro.props;
const resolvedHref = href.startsWith('/') ? `${import.meta.env.BASE_URL}${href.slice(1)}` : href;

const baseClass =
  'inline-flex items-center justify-center rounded-lg font-semibold transition-all duration-200';
const variantClass =
  variant === 'primary'
    ? 'bg-cyan text-navy hover:shadow-[0_0_20px_rgba(0,217,255,0.35)]'
    : 'border border-cyan text-cyan hover:bg-cyan hover:text-navy';
const sizeClass = size === 'lg' ? 'px-7 py-3 text-base' : 'px-5 py-2.5 text-sm';
const className = `${baseClass} ${variantClass} ${sizeClass}`;
---

<a href={resolvedHref} class={className}>
  <slot />
</a>
