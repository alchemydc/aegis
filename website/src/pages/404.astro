---
import Base from '../layouts/Base.astro';
import CTAButton from '../components/CTAButton.astro';
---

<Base title="Page Not Found - Aegis" description="The page you requested does not exist.">
  <section class="bg-off-white py-24 dark:bg-charcoal">
    <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
      <div class="reveal mx-auto h-20 w-20 rounded-2xl border border-cyan/50 bg-cyan/10"></div>
      <h1 class="mt-8 text-4xl font-bold text-navy dark:text-white">Page not found</h1>
      <p class="mt-4 text-base text-gray-muted">
        The route you requested does not exist or has moved.
      </p>
      <div class="mt-8 flex justify-center">
        <CTAButton href="/" size="lg">Back to Home</CTAButton>
      </div>
    </div>
  </section>
</Base>
